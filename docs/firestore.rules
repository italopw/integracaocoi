{
  "rules": {
    "users": {
      "$uid": {
        "planning_data": {
          "$doc": {
            ".read": "$uid === request.auth.uid",
            ".write": "$uid === request.auth.uid"
          }
        }
      }
    },
    "public": {
      "planning_data": {
        "current_status": {
          ".read": "true",
          ".write": "request.auth != null"
        }
      }
    }
  }
}